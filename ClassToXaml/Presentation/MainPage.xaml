                ToolTipService.Placement="Mouse"
                ToolTipService.ToolTip="Open in Browser">-->

            <win:SymbolIcon
                Width="20"
                Height="20"
                Margin="16,0"
                Symbol="Globe"
                Tapped="SymbolIcon_Tapped_1"
                ToolTipService.Placement="Mouse"
                ToolTipService.ToolTip="Open in Browser" />
